@model IEnumerable<TicketSystem.Models.ManageUserViewModel>
@{
    ViewBag.Title = "ManageUser";
}
<h2>Zarządzaj użytkownikami</h2>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Role)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TypeOfTicket)
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Role)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TypeOfTicket)
            </td>
            <td>
                @if (item.Role == "User")
                {
                    @Html.ActionLink("Edytuj", "EditUser", new { id = item.Id })}
                else
                {
                    @Html.ActionLink("Edytuj", "EditUserAdvande", new { id = item.Id })
                }
                | @Html.ActionLink("Usuń", "DeleteUser", new { id = item.Id })
            </td>
        </tr>
    }
</table>
